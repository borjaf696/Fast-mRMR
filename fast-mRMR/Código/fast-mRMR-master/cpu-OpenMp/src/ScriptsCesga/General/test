module load gcc boost openmpi
cd $1
make clean
make
cd $2
N=1
b=24
limit=( 2 4 6 12 24)
for i in "${limit[@]}"
do
	N=$((b/i))
	echo $N
	export OMP_NUM_THREADS=$N
	mpirun -np $i --report-bindings --map-by socket $8 -a 50 -f $3 >> $4
	mpirun -np $i --report-bindings --map-by socket $8 -a 50 -f $5 >> $6
done

